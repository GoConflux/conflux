<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Conflux</title>
  <link rel="shortcut icon" href="http://confluxapp.s3-website-us-west-1.amazonaws.com/images/favicon.ico">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"/>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/selectize.js/0.12.1/css/selectize.min.css">
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <script text="javascript" src="https://code.jquery.com/jquery-2.2.3.min.js"></script>
  <script text="javascript" src="https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore-min.js"></script>
  <script text="javascript" src="https://cdnjs.cloudflare.com/ajax/libs/selectize.js/0.12.1/js/standalone/selectize.js"></script>
  <script text="javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= @bg_light_gray ? 'light-gray' : '' %>">
<% if @show_menu %>
  <%= react_component('Menu', @menu_data, { prerender: true }) %>
<% end %>
<div id="csBody" class="<%= @show_menu ? '' : 'no-menu' %>">
  <% if @landing_header %>
    <%= react_component('LandingHeader', @header_team_data, { prerender: true }) %>
  <% else %>
    <%= react_component('Header', @header_data, { prerender: true }) %>
  <% end %>
  <%= yield %>
</div>
<div id="confluxModal" class="modal fade" role="dialog" aria-labelledby="confluxModal" aria-hidden="true">
  <%= react_component('Modal') %>
</div>
<% if @header_team_data %>
  <%= react_component('HeaderTeamMenu', @header_team_data, { prerender: true }) %>
<% end %>
</body>
</html>